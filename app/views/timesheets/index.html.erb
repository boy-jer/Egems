
<%# TODO: investigate why @active_time in here becomes UTC %>
<%= timesheet_navs(@active_time) %>

<div class="tab-content">
  <div class="tab-pane active" id="monday">
    <p class="btn-group">
      <%= link_to "Time in", timein_path, :method => :post, :class => 'btn btn-large' %>
      <%= link_to "Time out", timeout_path, :method => :post, :class => 'btn btn-large' %>
    </p>
    <table class="table">
      <thead>
      <tr>
        <th>Date</th>
        <th>Time In</th>
        <th>Time Out</th>
        <th>Total Hours</th>
        <th>Late</th>
        <th>Undertime</th>
        <th>Excess</th>
      </tr>
      </thead>
      <tbody>
      <% @employee_timesheets_active.each do |timesheet| %>
      <tr>
        <td><%= format_date timesheet.date %></td>
        <td><%= format_long_time timesheet.time_in_without_adjustment %></td>
        <td><%= format_long_time timesheet.time_out %></td>
        <td><%= format_in_hours timesheet.duration %></td>
        <td><%= format_in_hours timesheet.minutes_late %>
        <td><%= format_in_hours timesheet.minutes_undertime %></td>
        <td><%= format_in_hours timesheet.minutes_excess %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
